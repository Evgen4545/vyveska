<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_logo"
    tools:context=".ui.profile.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="83dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/profile_icon" />

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="129dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/marmelad_regular"
                    android:gravity="center"
                    android:text="Имя"
                    android:textColor="@color/gray"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="53dp"
                    android:layout_height="53dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/icons8"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="279dp"
                android:layout_height="31dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/marmelad_regular"
                android:gravity="center"
                android:text="email"
                android:textColor="@color/gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="_________________________________"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Данные организации"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="название организации"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="телефон"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="email организации"
                android:textColor="@color/gray" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/whatsapp" />

            <TextView
                android:id="@+id/exit"
                android:layout_width="117dp"
                android:layout_height="33dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/round_blue"
                android:gravity="center"
                android:text="Выход"
                android:textColor="@color/white_text" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>